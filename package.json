    "@thebespokepixel/es-tinycolor": "^3.0.4",
    "chroma-js": "^2.1.2",
    "color-convert": "^2.0.1",
    "opencolor": "^0.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.0.6",
    "@types/estree": "^0.0.50",
    "ava": "^4.0.0-rc.1",
    "c8": "^7.10.0",
    "documentation-theme-bespoke": "^2.0.12",
    "nyc": "^15.1.0",
